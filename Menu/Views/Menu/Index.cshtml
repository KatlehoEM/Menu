@model List<Menu.Models.Dish>
@{
    ViewData["Title"] = "MenuIndex";
}
<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-6">
                <div class="d-flex justify-content-center">
                    <h2>@item.Name</h2>
                </div>

                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" style="width:70%"/>
                </div>
                <div class="d-flex justify-content-center">
                    @item.Price.ToString("N2") rands
                </div>
            </div>
            
        }
    </div>
</div>