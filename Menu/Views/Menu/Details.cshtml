@model Dish
@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <h1>@Model.Name</h1>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@Model.ImageUrl" style="width:50%" />
    </div>
    <div class="d-flex justify-content-center">
        @Model.Price.ToString("N2") rands
    </div>
    <div class="d-flex justify-content-center">
        Ingredients:
        <ul>
            @foreach(var item in Model.DishIngredients)
            {
                <li>
                    @item.Ingredient.Name
                </li>
            }
        </ul>
    </div>
</div>